<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/youtube_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/forgot_password_bg">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#E0E0E0">

        <LinearLayout
            android:id="@+id/sub_title_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/youtube_sub_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp"
                android:layout_weight="90"
                android:shadowColor="@color/white"
                android:shadowDx="1"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_weight="10"
                android:src="@drawable/share" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub_title_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp">

            <ImageView
                android:id="@+id/youtube_playlist_thumb"
                android:layout_width="320dp"
                android:layout_height="190dp"
                android:layout_centerInParent="true"
                android:layout_margin="0dp"
                android:contentDescription="empty"
                android:scaleType="fitXY"
                android:src="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#60ff0000"
                android:contentDescription="empty"
                android:src="@drawable/ic_play_big" />

            <ImageView
                android:id="@+id/fav_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="25dp"
                android:paddingTop="5dp"
                android:src="@drawable/fav_remove" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>