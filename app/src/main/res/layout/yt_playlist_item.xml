<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/youtube_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/forgot_password_bg">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:background="@color/white">



        <LinearLayout
            android:id="@+id/sub_title_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/youtube_playlist_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:layout_weight="90"
                android:shadowColor="@color/white"
                android:shadowDx="1"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:layout_weight="10"
                android:src="@drawable/share" />


        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub_title_layout"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/youtube_playlist_thumb"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_margin="@dimen/margin_8dp"
                android:background="@android:color/darker_gray"
                android:contentDescription="@string/empty"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/empty"
                android:background="@drawable/ic_play_big"
                android:padding="@dimen/margin_20dp" />

            <ImageView
                android:id="@+id/fav_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/fav_yes"/>

            <ImageView
                android:id="@+id/fav_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/fav_no" />

        </FrameLayout>


    </RelativeLayout>

</RelativeLayout>